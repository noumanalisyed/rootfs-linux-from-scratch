#!/bin/bash

root_directory=$(pwd)
script_directory="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $root_directory

source $root_directory/tools/functions

. $script_directory/package
. $root_directory/tools/setenv

run_command "mkdir -pv $build_directory"
run_command "cd $build_directory"

PATH="$_PATH" \
/usr/bin/make -j5 ARCH=x86_64 HOSTCC="$_CC" \
    HOSTCFLAGS="" HOSTCXX="$_CXX" INSTALL_HDR_PATH=$build_directory/usr \
    headers_install
