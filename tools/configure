#!/bin/bash

package_full=$1

root_directory=$(pwd)
script_directory="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $root_directory

source $script_directory/functions
source $script_directory/install-functions

. $root_directory/package/$package_full/package

. $root_directory/tools/setenv

echo_color yellow "Configuring $package-$version"

run_command "mkdir -pv $root_directory/build/$package-$version"
run_command "cd $root_directory/build/$package-$version"

if [ $do_autoreconf == "yes" ]; then
	. $root_directory/package/$package_full/autoreconfigure
fi

patch_libtool

run_command "rm -rf config.cache"

. $root_directory/package/$package_full/configure

run_command "touch $root_directory/build/$package-$version/.stamp_configured"
